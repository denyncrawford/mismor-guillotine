{
  "name": "guillotine",
  "version": "0.0.1",
  "main": "dist/main/build.js",
  "author": "denyncrawford",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=vue,ele -c=green,blue \"npm run dev:vue\" \"npm run dev:ele\"",
    "dev:vue": "vite",
    "dev:ele": "node script/build --env=development --watch",
    "build:vue": "vite build",
    "build:ele": "node script/build --env=production",
    "build": "npm run build:vue && npm run build:ele && electron-builder"
  },
  "build": {
    "appId": "crawford.gullotine.com",
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "files": [
      "node_modules/**",
      "dist/render/**",
      "dist/main/**"
    ],
    "asar": false,
    "mac": {
      "artifactName": "${productName}_setup_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@denyncrawford/html-to-image": "github:denyncrawford/html-to-image",
    "animate.css": "^4.1.1",
    "dayjs": "^1.9.7",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.0",
    "element-plus": "^1.0.2-beta.33",
    "events": "^3.2.0",
    "feather-icons": "^4.28.0",
    "fs-extra": "^8.1.0",
    "html2canvas": "^1.0.0-rc.7",
    "jsbarcode": "^3.11.3",
    "json2csv": "^5.0.6",
    "jspdf": "^2.2.0",
    "mongodb": "^3.6.3",
    "native-barcode-scanner": "^1.2.0",
    "pdf-to-printer": "^1.6.0-sumatra-pdf-v3.0",
    "qrcode": "^1.4.4",
    "shortid": "^2.2.16",
    "tailwindcss": "compat",
    "v-calendar": "^3.0.0-alpha.3",
    "vue": "^3.0.7",
    "vue-router": "^4.0.0-rc.6",
    "vuex": "^4.0.0-rc.2"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@vue/compiler-sfc": "^3.0.7",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "electron": "latest",
    "electron-builder": "^22.8.0",
    "electron-connect": "^0.6.3",
    "electron-rebuild": "^2.3.4",
    "minimist": "^1.2.5",
    "ora": "^5.0.0",
    "postcss-font-magician": "^3.0.0",
    "rollup-plugin-esbuild": "^2.4.2",
    "sass": "^1.26.10",
    "typescript": "^3.9.7",
    "vite": "latest",
    "vite-plugin-fonts": "^0.1.5",
    "wait-on": "^5.2.0"
  },
  "keywords": [
    "vite",
    "electron",
    "vue3",
    "rollup"
  ]
}
